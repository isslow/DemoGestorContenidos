@model IEnumerable<GestorContenido.Models.Contenido>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            if (item.row == "1")
            {
                <div class="row">
                    <div class="col-lg-4">
                        <a href="#" class="thumbnail">
                            <img src="~/Content/resources/@item.imageDir" />
                        </a>
                    </div>
                    <div class="col-lg-8">
                        <h2>@item.titulo</h2>
                        <p>
                            @item.texto
                        </p>

                    </div>
                    @Html.ActionLink("Administrar", "index", "Contenido", null, new { @class = "btn btn-default" })
                    @*<a class="btn btn-success" asp-action="administrar" asp-controller="Administrador" >Administrar</a>*@
                </div>
            }
            else if (item.row == "2")
            {
                <div class="row">
                    <div class="col-lg-8">
                        <h2>@item.titulo</h2>
                        <p>
                           @item.texto
                        </p>
                        @Html.ActionLink("Administrar", "index", "Contenido", null, new { @class = "btn btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <a href="#" class="thumbnail">
                            <img src="~/Content/resources/@item.imageDir" />
                        </a>
                    </div>
                </div>
            }
            else if (item.row == "3")
            {
                <div class="row">
                    <div class="col-lg-4">
                        <a href="#" class="thumbnail">
                            <img src="~/Content/resources/@item.imageDir" />
                        </a>
                    </div>
                    <div class="col-lg-8">
                        <h2>@item.titulo</h2>
                        <p>
                            @item.texto
                        </p>

                    </div>
                    @Html.ActionLink("Administrar", "index", "Contenido", null, new { @class = "btn btn-default" })
                    @*<a class="btn btn-success" asp-action="administrar" asp-controller="Administrador" >Administrar</a>*@
                </div>
            }
        }

    }
</div>
